<?xml version="1.0" encoding="utf-8"?>

<com.github.florent37.parallax.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dex="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.florent37.parallax.ParallaxView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:parallaxVertical="0.8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:alpha="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/google" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/image_trans" />

            </RelativeLayout>

        </com.github.florent37.parallax.ParallaxView>

        <android.support.v7.widget.CardView
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="210dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.pixplicity.fontview.FontTextView
                        android:id="@+id/title"
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:text="BUKA BARENG - MULTIMEDIA"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <com.pixplicity.fontview.FontTextView
                            android:id="@+id/tgl"
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="Saturday 24 / 12 / 2016"
                            android:textColor="@color/colorAccent"
                            android:textSize="12dp" />

                        <com.pixplicity.fontview.FontTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="6dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="-"
                            android:textColor="@color/colorAccent"
                            android:textSize="10dp" />

                        <com.pixplicity.fontview.FontTextView
                            android:id="@+id/jam"
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="6dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="05:00 PM"
                            android:textColor="@color/colorAccent"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/google" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <com.pixplicity.fontview.FontTextView
                                android:id="@+id/nama"
                                style="@style/FontTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="ARRIVAL CORNAN ISMAIL"
                                android:textColor="#7b7b7b"
                                android:textSize="13dp" />

                            <com.pixplicity.fontview.FontTextView
                                style="@style/FontTextViewStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="PHONE +6289699759531"
                                android:textColor="#888"
                                android:textSize="12dp" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginTop="16dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardBackgroundColor="@color/colorAccent"
                                    app:cardElevation="2dp">

                                    <com.pixplicity.fontview.FontTextView
                                        style="@style/FontTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="6dp"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginRight="12dp"
                                        android:layout_marginTop="6dp"
                                        android:lines="1"
                                        android:maxLines="1"
                                        android:text="Attended"
                                        android:textColor="#ffffff"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginTop="16dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:visibility="gone"
                                    app:cardBackgroundColor="#5ec97a"
                                    app:cardElevation="2dp">

                                    <com.pixplicity.fontview.FontTextView
                                        style="@style/FontTextViewStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="6dp"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginRight="12dp"
                                        android:layout_marginTop="6dp"
                                        android:lines="1"
                                        android:maxLines="1"
                                        android:text="Attended"
                                        android:textColor="#f1f1f1"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="#dadada" />

                        <com.pixplicity.fontview.FontTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="DESCRIPTION :"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <com.pixplicity.fontview.FontTextView
                            android:id="@+id/deskripsi"
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/large_text"
                            android:textColor="#888"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="30dp"
                            android:background="#dadada" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="26dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location"
                            android:tint="#000" />

                        <com.pixplicity.fontview.FontTextView
                            android:id="@+id/lokasi"
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="Jalan Dipatiukur, Banten"
                            android:textColor="#6c6c6c"
                            android:textSize="11dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#454545">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/trans_tool" />


                        <!-- Masukan Fragment Maps
                        <fragment
                            android:layout_width="match_parent"
                            android:layout_height="165dp"/>
                        -->
                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="165dp"
                            android:alpha="0.8"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exmaps" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/view" />

                        <com.pixplicity.fontview.FontTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="11 Views"
                            android:textColor="#646464"
                            android:textSize="11dp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</com.github.florent37.parallax.ScrollView>