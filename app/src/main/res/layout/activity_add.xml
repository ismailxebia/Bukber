<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:dex="http://schemas.android.com/tools"
            android:id="@+id/cardview"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#f5f5f5"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.pixplicity.fontview.FontTextView
                    android:id="@+id/nama"
                    style="@style/FontTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Select Image"
                    android:textColor="#646464"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/select"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nullpicture" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/title" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="6dp"
                        android:hint="Title"
                        android:textSize="15dp"
                        app:met_accentTypeface="fonts/ProductSans.ttf"
                        app:met_baseColor="#007688"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="0dp"
                        app:met_maxCharacters="35"
                        app:met_primaryColor="@color/colorAccent"
                        app:met_textColor="#686464"
                        app:met_textColorHint="#c1c1c1"
                        app:met_typeface="fonts/ProductSans.ttf"
                        app:met_underlineColor="#e2e2e2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/des" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/descrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="6dp"
                        android:hint="Description"
                        android:textSize="15dp"
                        app:met_accentTypeface="fonts/ProductSans.ttf"
                        app:met_baseColor="#007688"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="0dp"
                        app:met_maxCharacters="100"
                        app:met_primaryColor="@color/colorAccent"
                        app:met_textColor="#686464"
                        app:met_textColorHint="#c1c1c1"
                        app:met_typeface="fonts/ProductSans.ttf"
                        app:met_underlineColor="#e2e2e2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/place" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="6dp"
                        android:hint="Place"
                        android:textSize="15dp"
                        app:met_accentTypeface="fonts/ProductSans.ttf"
                        app:met_baseColor="#007688"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="0dp"
                        app:met_maxCharacters="35"
                        app:met_primaryColor="@color/colorAccent"
                        app:met_textColor="#686464"
                        app:met_textColorHint="#c1c1c1"
                        app:met_typeface="fonts/ProductSans.ttf"
                        app:met_underlineColor="#e2e2e2" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <com.pixplicity.fontview.FontTextView
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Select from Map"
                        android:textColor="#646464"
                        android:textSize="13dp" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/event" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.pixplicity.fontview.FontTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="20dp"
                            android:text="Select Date"
                            android:textColor="#494949"
                            android:textSize="16dp" />

                        <com.pixplicity.fontview.FontTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="16dp"
                            android:text="Sabtu - 23 Apr 2014"
                            android:textColor="#b3b3b3"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/clock" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.pixplicity.fontview.FontTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="20dp"
                            android:text="Select Time"
                            android:textColor="#494949"
                            android:textSize="16dp" />

                        <com.pixplicity.fontview.FontTextView
                            android:id="@+id/value_jam"
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="16dp"
                            android:text="17:30 PM"
                            android:textColor="#b3b3b3"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="16dp"
                    android:background="#dadada"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/enable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:textColor="#999"
                        android:layout_marginTop="8dp"

                        android:text="Pay"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="6dp"
                        android:hint="Value"
                        android:textSize="15dp"
                        app:met_accentTypeface="fonts/ProductSans.ttf"
                        app:met_baseColor="#007688"
                        app:met_floatingLabel="highlight"
                        app:met_iconPadding="0dp"
                        app:met_maxCharacters="35"
                        app:met_primaryColor="@color/colorAccent"
                        app:met_textColor="#686464"
                        app:met_textColorHint="#c1c1c1"
                        app:met_typeface="fonts/ProductSans.ttf"
                        app:met_underlineColor="#e2e2e2" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>